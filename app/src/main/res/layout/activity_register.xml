<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>
    <EditText
        android:id="@+id/tv_phone_num"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/icon_user"
        android:hint="@string/enter_phone_num"
        android:drawablePadding="10dp"
        android:layout_marginStart="40dp"
        android:inputType="phone"
        android:background="@null"/>
    <View
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="1dp"
        android:background="#C1C1C1"/>
    <LinearLayout
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/tv_enter_code"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/verification_code"
        android:layout_marginStart="40dp"
        android:drawablePadding="10dp"
        android:drawableStart="@mipmap/icon_code"
        android:inputType="number"
        android:background="@null"/>
        <cn.huanyan.mxwvideo.utils.ValidateCodeView
            android:layout_weight="1"
            android:id="@+id/validateCodeView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/text_view_back"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="发送验证码"
            android:textColor="@color/bottom_bar_un"
            app:mHandlerSendCode="2"
            app:mPreStr="重新发送（"
            app:mSuffixStr="）"
            app:mTotalSeconds="5" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="20dp"
        android:background="#C1C1C1"/>

    <EditText
        android:id="@+id/tv_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/icon_password"
        android:hint="@string/enter_password"
        android:drawablePadding="10dp"
        android:layout_marginStart="40dp"
        android:inputType="textPassword"
        android:background="@null"/>
    <View
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="1dp"
        android:background="#C1C1C1"/>
    <EditText
        android:id="@+id/tv_password_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_password_again"
        android:layout_marginStart="40dp"
        android:drawablePadding="10dp"
        android:drawableStart="@mipmap/icon_password"
        android:layout_marginEnd="40dp"
        android:inputType="textPassword"
        android:background="@null"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="20dp"
        android:background="#C1C1C1"/>
    <android.support.v7.widget.CardView
        android:id="@+id/tv_next"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        app:cardBackgroundColor="#E93639"
        app:cardCornerRadius="5dp"
        android:layout_height="40dp">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bottom_bar_un"
            android:textSize="18sp"
            android:text="@string/complete"/>
    </android.support.v7.widget.CardView>

</LinearLayout>